<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/img_us_header"
            android:background="@drawable/shape_circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <TextView
            android:id="@+id/text_us_nikename"
            app:layout_constraintTop_toTopOf="@id/img_us_header"
            app:layout_constraintLeft_toRightOf="@id/img_us_header"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请登录"/>
        <TextView
            android:id="@+id/text_us_updateinfo"
            app:layout_constraintTop_toTopOf="@id/img_us_header"
            app:layout_constraintLeft_toRightOf="@id/text_us_nikename"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑信息"/>
        <Button
            android:id="@+id/go_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_orange"
            app:layout_constraintBottom_toBottomOf="@id/img_us_header"
            app:layout_constraintLeft_toRightOf="@id/img_us_header"
            android:text="立即登录"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="12"
            android:background="@drawable/shape_bg_orange"
            app:layout_constraintBottom_toBottomOf="@id/img_us_header"
            app:layout_constraintLeft_toRightOf="@id/img_us_header"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>