<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_userHeader"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/yika"/>
    <TextView
        android:id="@+id/item_usernike"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_userHeader"
        app:layout_constraintLeft_toRightOf="@id/item_userHeader"
        android:text="用户名"/>
    <TextView
        android:id="@+id/item_userTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/item_userHeader"
        app:layout_constraintLeft_toLeftOf="@id/item_usernike"
        android:text="几分钟前"/>
    <TextView
        android:id="@+id/item_userLove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+关注"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_userHeader"
        app:layout_constraintBottom_toBottomOf="@id/item_userHeader"/>
    <TextView
        android:id="@+id/item_userContent"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/item_userHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_userImgRec"
        app:layout_constraintTop_toBottomOf="@id/item_userContent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/commentConstraintLayout"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_userImgRec"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/item_text_praise"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="点赞"/>
        <TextView
            android:id="@+id/item_text_comment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="评论"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/item_text_praiseAll"
        app:layout_constraintTop_toBottomOf="@id/commentConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点赞的只有我一个人"/>
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/item_text_praiseAll"
        android:id="@+id/item_userpraiseRec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>